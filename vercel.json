{
	"version": 2,
	"builds": [
		{
			"src": "index.js",
			"use": "@vercel/node",
			"config": { "includeFiles": ["src/**"] }
		},
		{
			"src": "public/**",
			"use": "@vercel/static",
			"config": { "includeFiles": ["public/**"] }
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "index.js"
		},
		{
			"src": "/",
			"dest": "public/index.html"
		},
		{
			"src": "/(.+)",
			"dest": "public/$1"
		}
	]
}
